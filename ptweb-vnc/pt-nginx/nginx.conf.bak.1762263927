
user nginx;
worker_processes auto;

error_log /var/log/nginx/error.log warn;
pid /var/run/nginx.pid;

events {
    worker_connections 1024;
}

http {
    include /etc/nginx/mime.types;
    default_type application/octet-stream;

    log_format main '$remote_addr - $remote_user [$time_local] "$request" '
                    '$status $body_bytes_sent "$http_referer" '
                    '"$http_user_agent" "$http_x_forwarded_for"';

    access_log /var/log/nginx/access.log main;

    sendfile on;
    tcp_nopush on;
    tcp_nodelay on;
    keepalive_timeout 65;
    types_hash_max_size 2048;

    gzip on;
    gzip_vary on;
    gzip_proxied any;
    gzip_comp_level 6;
    gzip_types text/plain text/css text/xml text/javascript application/json application/javascript application/xml+rss application/rss+xml font/truetype font/opentype application/vnd.ms-fontobject image/svg+xml;

    # Docker DNS resolver
    resolver 127.0.0.11:53 valid=10s;
    resolver_timeout 5s;

    # GeoIP support - http-level configuration
    geoip_country /usr/share/GeoIP/GeoIP.dat;
    geoip_proxy_recursive on;

    # ALLOW mode (whitelist): Only permit traffic from specified countries
    # Returns 1 if country is in allow list, 0 (deny) for all others including unknown
    map $geoip_country_code $allowed_country {
        default 0;  # Default to 0 (deny all unless explicitly allowed)
        FI 1;
    }

    # BLOCK mode disabled - no countries blocked
    map $geoip_country_code $blocked_country {
        default 0;  # Default to 0 (don't block)
    }
    # Trusted IP map: bypass GeoIP checks for configured IPs
    map $remote_addr $is_trusted_ip {
        default 0;
        "127.0.0.1" 1;  # Added from NGINX_TRUSTED_IPS
        "~^10\." 1;              # 10.0.0.0/8 (private)
        "~^172\.(1[6-9]|2[0-9]|3[01])\." 1;  # 172.16.0.0/12 (private)
        "~^192\.168\." 1;         # 192.168.0.0/16 (private)
    }
    # Combined ALLOW mode check: deny if (not trusted IP) AND (country not allowed)
    map "$is_trusted_ip:$allowed_country" $should_deny_allow_mode {
        default 0;
        "0:0" 1;  # Not trusted IP AND not in allow list => DENY
    }
    # Include all server configurations from conf.d
    include /etc/nginx/conf.d/*.conf;
}
